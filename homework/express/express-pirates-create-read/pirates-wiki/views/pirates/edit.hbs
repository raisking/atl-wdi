<h1>Edit {{runpirate.name}}</h1>
<hr>
<div class="row">
  <form action="/pirates/{{runpirate.id}}?_method=PUT" method="POST" class="col-md-6 col-md-offset-3">
  <form class="col-md-6 col-md-offset-3">
    <div class="form-group">
      <label for="name"></label>
      <input type="text" name="name" class="form-control" value="{{runpirate.name}}">
    </div>
   <div class="form-group">
      <label for="birthplace"></label>
      <input type="text" name="birthplace" class="form-control" value="{{runpirate.birthplace}}">
    </div>
   <div class="form-group">
      <label for="death_year"></label>
      <input type="text" name="death_year" class="form-control" value="{{runpirate.death_year}}">
    </div>
   <div class="form-group">
      <label for="base"></label>
      <input type="text" name="base" class="form-control" value="{{runpirate.base}}">
    </div>

   <div class="form-group">
      <label for="nickname"></label>
      <input type="text" name="nickname" class="form-control" value="{{runpirate.nickname}}">
    </div>   <br> 
    <div>
      <input type="submit" value="Update Pirate Information" class="btn btn-default">
    </div>
  </form>
</div>